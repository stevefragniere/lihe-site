---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Mon Bien-Être - Lihé</title>
  </head>

  <body class="flex flex-col min-h-screen bg-gray-50">

    <!-- Header global -->
    <Header />

    <!-- Logo en fond fixe -->
    <div class="bg-logo">
      <img
        src="/assets/logo.png"
        alt="Logo Lihé"
        class="opacity-10 max-h-[500px] w-auto"
      />
    </div>

    <!-- Contenu principal -->
    <main class="flex-1 relative z-10 pt-24 pb-24">
      <slot />
    </main>

    <!-- Footer GLOBAL -->
    <Footer />

  </body>
</html>