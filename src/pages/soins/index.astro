---
import Layout from '../../layouts/Layout.astro';
---

<Layout>
  <section class="max-w-4xl mx-auto py-16 px-4 space-y-8 text-center">
    <h1 class="text-4xl font-bold">Les Soins</h1>

    <div class="grid md:grid-cols-2 gap-6 mt-8">

      <!-- Massage Shinzu -->
      <a
        href="/soins/massage-shinzu"
        class="relative z-10 group overflow-hidden rounded-lg shadow-md h-56 flex items-center justify-center"
      >
        <!-- image de fond -->
        <img
          src="/assets/shinzu-kansa-2.png"
          alt="Massage Shinzu"
          class="absolute inset-0 w-full h-full object-cover object-[50%_30%] transition-all duration-500 md:grayscale md:group-hover:grayscale-0 md:group-hover:scale-105"
        />

        <!-- overlay -->
        <div class="absolute inset-0 bg-black/40"></div>

        <!-- contenu -->
        <div class="relative z-40 p-4 text-white text-center">
          <h2 class="text-2xl font-semibold mb-2">Massage Shinzu</h2>
          <p>Face, pieds & corps – détente et équilibre.</p>
        </div>
      </a>

      <!-- Soins énergétiques et magnétiques -->
      <a
        href="/soins/soins-energetiques"
        class="relative z-10 group overflow-hidden rounded-lg shadow-md h-56 flex items-center justify-center"
      >
        <!-- image de fond -->
        <img
          src="/assets/soins-energetiques.png"
          alt="Soins énergétiques et magnétiques"
          class="absolute inset-0 w-full h-full object-cover object-[50%_30%] transition-all duration-500 md:grayscale md:group-hover:grayscale-0 md:group-hover:scale-105"
        />

        <!-- overlay -->
        <div class="absolute inset-0 bg-black/40"></div>

        <!-- contenu -->
        <div class="relative z-40 p-4 text-white text-center">
          <h2 class="text-2xl font-semibold mb-2">
            Soins énergétiques et magnétiques
          </h2>
          <p>Rééquilibrage énergétique et bien-être profond.</p>
        </div>
      </a>

    </div>
  </section>
</Layout>
